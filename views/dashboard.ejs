    </div>
  <% } %>
  <!-- Header -->
   <%- include("partials/site-header", { currentPage: "dashboard" }) %>
  <!-- Main container -->
  <div class="dashboard-container">
    <% const dashStats = volunteerStats || {}; %>
    <% const rawTier = (dashStats.priority_tier || 'Bronze'); %>
    <% const tierLabel = (typeof rawTier === 'string' && rawTier.length)
      ? rawTier.charAt(0).toUpperCase() + rawTier.slice(1).toLowerCase()
      : 'Bronze'; %>
    <% const currentUser = (typeof user !== 'undefined' && user) ? user : null; %>
    <% const profileName = (currentUser && currentUser.firstname) ? currentUser.firstname : 'Volunteer'; %>
    <% const rawProfilePhoto = (currentUser && (currentUser.picture || currentUser.profile_photo_url || currentUser.avatar_url || currentUser.photo_url))
      ? (currentUser.picture || currentUser.profile_photo_url || currentUser.avatar_url || currentUser.photo_url)
      : null; %>
    <% const profilePhoto = (typeof rawProfilePhoto === 'string')
      ? rawProfilePhoto.replace(/^http:\/\//i, 'https://')
      : rawProfilePhoto; %>
    <% const dashRoutes = {
      dashboard: '/dashboard',
      opportunities: '/events',
      impact: '#',
      rewards: '#',
      crew: '#',
      settings: '#',
      faq: '/how-it-works#faq',
      feedback: '/contact'
    }; %>
    <% const completedEvent = (typeof dashboardCompletedEvent !== 'undefined') ? dashboardCompletedEvent : null; %>
    <% const upcomingEvent = (typeof dashboardUpcomingEvent !== 'undefined') ? dashboardUpcomingEvent : null; %>
    <div class="container-fluid my-4">
      <div class="dash-grid">
        <aside class="dash-left d-none d-lg-block">
          <div class="dash-sidebar-shell">
            <div class="card dash-card shadow-sm border-0">
              <div class="card-body">
                <div class="d-flex align-items-center gap-3 mb-3">
                  <div class="dash-avatar">
                    <% if (profilePhoto) { %>
                      <img src="<%= profilePhoto %>" alt="<%= profileName %> profile photo" loading="lazy">
                    <% } else { %>
                      <i class="fa-solid fa-hand-holding-heart"></i>
                    <% } %>
                  </div>
                  <div>
                    <div class="dash-profile-name"><%= profileName %></div>
                    <div class="dash-meta-row">
                      <i class="fa-solid fa-medal" aria-hidden="true"></i>
                      <span>Tier: <strong><%= tierLabel %></strong></span>
                    </div>
                    <div class="dash-meta-row">
                      <i class="fa-solid fa-fire-flame-curved" aria-hidden="true"></i>
                      <span>Streak: <strong><%= Number(dashStats.streak_weeks) || 0 %> weeks</strong></span>
                    </div>
                  </div>
                </div>
                <a class="btn dash-btn-ink w-100" href="/profile">View profile</a>
              </div>
            </div>

            <div class="card dash-card shadow-sm border-0">
              <div class="card-body">
                <div class="small text-uppercase fw-semibold mb-2 dash-side-card-title">Navigation</div>
                <nav aria-label="Dashboard navigation">
                  <ul class="dash-nav list-unstyled mb-0">
                    <li><a href="<%= dashRoutes.opportunities %>"><i class="fa-solid fa-compass"></i>Find Opportunities</a></li>
                    <li><a href="#" class="dash-coming-soon" data-title="Rewards" data-message="This functionality is in development! Check back soon to see the page with the rewards you can avail with your Impact Points."><i class="fa-solid fa-gift"></i>Rewards</a></li>
                    <li><a href="#" class="dash-coming-soon" data-title="My Crew" data-message="This functionality is in development and coming soon! Volunteering with your Crew is the best and we want to help make that happen."><i class="fa-solid fa-users"></i>My Crew</a></li>
                    <li><a href="#" class="dash-coming-soon" data-title="Settings" data-message="This functionality is in development and coming soon!"><i class="fa-solid fa-gear"></i>Settings</a></li>
                  </ul>
                </nav>
              </div>
            </div>

            <div class="card dash-card dash-sidebar-foot shadow-sm border-0">
              <div class="card-body">
                <div class="small text-uppercase fw-semibold mb-2 dash-side-card-title">Support</div>
                <ul class="dash-secondary-links list-unstyled mb-0">
                  <li><a href="<%= dashRoutes.faq %>"><i class="fa-regular fa-circle-question"></i>FAQ</a></li>
                  <li><a href="<%= dashRoutes.feedback %>"><i class="fa-regular fa-comment-dots"></i>Feedback/Help</a></li>
                </ul>
              </div>
