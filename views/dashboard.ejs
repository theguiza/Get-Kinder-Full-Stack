<body class="dashboard-page">
  <a class="dash-skip-link" href="#dash-main">Skip to main content</a>
  <!-- Google Tag Manager (noscript) -->
  <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-5NMWPW33" height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
  <!-- Alerts -->
  <% if (typeof success !== 'undefined' && success) { %>
    <div class="alert alert-success alert-dismissible fade show auto-dismiss" role="alert">
      Registration successful! Welcome to Get Kinder ðŸŒŸ
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% } %>
  <% if (typeof loginSuccess !== 'undefined' && loginSuccess && typeof name !== 'undefined' && name) { %>
    <div class="alert alert-success alert-dismissible fade show auto-dismiss" role="alert">
      Welcome back, <%= name %>! ðŸŽ‰
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% } %>
