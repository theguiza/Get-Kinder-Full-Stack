<script>
(function flushOnboardingDraftOnce() {
  try {
    var RAW_KEY = 'onboarding.draft';
    var FLUSH_FLAG = 'onboarding.flushed';
    if (localStorage.getItem(FLUSH_FLAG) === '1') return;

    var raw = localStorage.getItem(RAW_KEY);
    if (!raw) return;
    var draft = JSON.parse(raw); // { v, answers, index, ts }
    var a = (draft && draft.answers) || {};

    // Map onboarding answers -> userdata fields
    var interests = Array.isArray(a.interests)
      ? a.interests.map(String).map(s => s.trim()).filter(Boolean)
      : [];

    var payload = {
      // new columns you asked for:
      why_friend:        a.whyFriend || null,
      known_connection:  a.knownConnection || null,
      desired_outcome:   a.outcome || null,
      hours_per_week:    (typeof a.timeCommitment === 'number') ? a.timeCommitment : null,
      age_bracket:       a.age || null,

      // existing columns on profile page:
      interest1: interests[0] || '',
      interest2: interests[1] || '',
      interest3: interests[2] || ''
    };

    fetch('/api/onboarding/complete', {
      method: 'POST',
      headers: { 'Content-Type':'application/json' },
      body: JSON.stringify({ answers: payload, source: 'post_login_flush' })
    })
    .then(function (res) {
      if (!res.ok) return;
      // mark done & prevent remounting
      localStorage.removeItem(RAW_KEY);
      localStorage.setItem(FLUSH_FLAG, '1');
      document.cookie = 'onboarding_done=1; Max-Age=31536000; Path=/';
    })
    .catch(function(){ /* swallow */ });

  } catch (e) { /* swallow */ }
})();
</script>
