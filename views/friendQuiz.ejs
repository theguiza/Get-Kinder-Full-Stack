  <script>
  // Public page: let anyone play. Saving requires login.
  window.__bestie_onSave = async (payload) => {
    const res = await fetch("/api/friends", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      credentials: "same-origin",
      body: JSON.stringify(payload),
    });
    if (res.status === 401) {
      const go = confirm("Please sign in to save your results. Go to login now?");
      if (go) location.href = "/login?next=/friend-quiz";
      throw new Error("Unauthorized");
    }
    if (!res.ok) throw new Error(`Save failed: ${res.status} ${await res.text()}`);
  };
</script>

