<script>
  (function () {
    function setActiveTab(key) {
      var targetPanel = document.querySelector('.profile-panel[data-tab="' + key + '"]');
      if (!targetPanel) {
        console.warn('Missing panel for tab:', key);
        key = 'overview';
        targetPanel = document.querySelector('.profile-panel[data-tab="overview"]');
      }
      document.querySelectorAll('.profile-panel[data-tab]').forEach(function (p) {
        p.style.display = (p.getAttribute('data-tab') === key) ? 'block' : 'none';
      });
      document.querySelectorAll('#profileTabs .nav-link').forEach(function (b) {
        b.classList.toggle('active', b.getAttribute('data-tab-target') === key);
      });
    }

    document.addEventListener('DOMContentLoaded', function () {
      var tabs = document.getElementById('profileTabs');
      if (!tabs) return;

      console.log('[profile] panels:', [...document.querySelectorAll(".profile-panel[data-tab]")].map(p => p.getAttribute("data-tab")));

      tabs.addEventListener('click', function (e) {
        var btn = e.target.closest('button[data-tab-target]');
        if (!btn) return;
        e.preventDefault();
        var target = btn.getAttribute('data-tab-target');
        setActiveTab(target);
      });

      // default
      setActiveTab('overview');
    });
  })();
</script>
